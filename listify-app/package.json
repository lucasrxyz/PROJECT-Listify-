{
  "name": "listify-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron electron/main.cjs\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "axios": "^1.12.2",
    "pinia": "^3.0.3",
    "vite-plugin-vuetify": "^2.1.2",
    "vue": "^3.5.0",
    "vue-router": "^4.5.1",
    "vuetify": "^3.10.5",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron-builder": "^25.1.8",
    "vite": "^5.0.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.listify.desktop",
    "productName": "Listify",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
